{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Mon Profil{% endblock %}

{% block body %}
  <h1 class="text-center text-primary mt-4 st-4 display-1 fw-bold">Mon Profil</h1>
  <div class="text-center">
    <span>Email: {{ app.user.email | lower }}</span>
    <br>
    <span>Nom: {{ app.user.lastname | upper }}</span>
    <br>
    <span>Prenom: {{ app.user.firstname | capitalize }}</span>
    <br>
    <span>Date d'inscription: {{ app.user.registrationDate | date("d-m-Y Ã  H:i:s") }}</span>
    <br>
    {% if is_granted('ROLE_ADMIN') %}
      <span>Role: administrateur</span>
    {% elseif is_granted('ROLE_MOD') %}
      <span>Role: moderateur</span>
    {% else %}
      <span>Role: utilisateur</span>
    {% endif %}
  </div>
{% endblock %}
